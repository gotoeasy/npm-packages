#!/usr/bin/env node

const cmmd = require('commander');
const inquirer = require('inquirer')

cmmd.usage('[options] [path]')
	.option('--debug', 'print debug log')
	.parse(process.argv);

let opts = {
	cwd: process.cwd(),
	debug: !!cmmd.debug
};

!opts.debug && (console.debug = x=>x);


console.info();
console.info('generate jar for eureka registration server');
console.info();

inquirer.prompt([{
    type: 'list',
    message: 'select spring-cloud-dependencies version',
    name: 'version',
    choices: [
        "Greenwich.RELEASE",
    ]
}]).then(answers => {
	Object.assign(opts, answers);

	require('../lib/10-spring-cloud-eureka-register/index')(opts);

});



